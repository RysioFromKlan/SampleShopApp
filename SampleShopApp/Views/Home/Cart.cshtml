@{
    ViewData["Title"] = "Cart Viewer";
}


<h1>Cart Viewer</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="cartTableBody">
                    <!-- Cart items will be loaded here -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            loadCartItems();
        });
                function calculateTotal(cartItems) {
            var total = 0;
            cartItems.forEach(function (item) {
                total += item.price * item.quantity;
            });
            return total;
        }

        function loadCartItems() {
            $.ajax({
                url: '/api/Cart',
                method: 'GET',
                success: function (data) {

                    $('#cartTableBody').empty();
                    data.forEach(function (item) {
                        $('#cartTableBody').append(`
                            <tr>
                                <td>${item.productId}</td>
                                <td>${item.productName}</td>
                                <td>${item.price}</td>
                                <td>
                                    <input type="number" min="1" class="form-control col-xs-2" value="${item.quantity}" onchange="changeQuantity(${item.productId}, this.value)">
                                </td>
                                <td>${item.price * item.quantity}</td>
                                <td>
                                    <button class="btn btn-danger" onclick="removeProduct(${item.productId})">Remove</button>
                                </td>
                            </tr>
                        `);
                    });
                     var total = calculateTotal(data);
            $('#cartTableBody').append(`
                <tr>
                    <td colspan="4"></td>
                    <td><strong>Total:</strong></td>
                    <td><strong>${total}</strong></td>
                </tr>
            `);
                },
                error: function (error) {
                    console.error('Error loading cart items:', error);
                    alert("Error loading cart items)");
                }
            });
        }

        function changeQuantity(productId, quantity) {
            $.ajax({
                url: '/api/Cart',
                method: 'POST',
                data: JSON.stringify({ productId: productId, quantity: quantity }),
                contentType: "application/json; charset=utf-8",
                success: function (response) {
                    if (response === 'Success') {
                        loadCartItems();
                    } else {
                        alert('Error updating quantity.');
                    }
                },
                error: function (error) {
                    console.error('Error updating quantity:', error);
                    alert('Error updating quantity.');
                }
            });
        }

        function removeProduct(productId) {
            $.ajax({
                url: `/api/Cart/${productId}`,
                method: 'DELETE',
                success: function (response) {
                    if (response === 'Success') {
                        loadCartItems();
                    } else {
                        alert('Error removing product.');
                    }
                },
                error: function (error) {
                    console.error('Error removing product:', error);
                    alert('Error removing product.');
                }
            });
        }
    </script>
}